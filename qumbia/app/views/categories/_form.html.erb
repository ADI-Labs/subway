<%= form.fields_for :categories do |cat_form| %>
  <div class="field">
    <%= cat_form.label :name, 'Category:' %>
    <%= cat_form.text_field :name %>
  </div>
  <% unless cat_form.object.nil? || cat_form.object.new_record? %>
    <div class="field">
      <%= cat_form.label :_destroy, 'Remove:' %>
      <%= cat_form.check_box :_destroy %>
    </div>
  <% end %>
<% end %>