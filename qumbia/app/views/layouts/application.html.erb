<!DOCTYPE html>
<html>
<head>
	<title>ASK ALMA</title>
	<%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
	<%= stylesheet_link_tag 'application', 'http://fonts.googleapis.com/css?family=Lato:100,300,400,300italic' %>
	<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
	<%= csrf_meta_tags %>
</head>

<body>
	<nav>
		<%= render :partial => 'layouts/search' %>

		<div class="content">
			<ul>
				<li class="action-item">
					<%= link_to(questions_path) do %>
					<p>ASK ALMA</p>
					<% end -%>
				</li>
				<li>
					<%= link_to(questions_path) do %>
					<p>newsfeed</p>
					<% end -%>
				</li>
				<li>
					<%= link_to(new_question_path) do %>
					<p>ask a question</p>
					<% end -%>
				</li>
			</ul>
			<ul class="right">
				<li>
					<% if user_signed_in? %>
  						<li>
  							<%= link_to('logout', destroy_user_session_path, :method => :delete) %>
  						</li>
					<% end %>
				</li>
				<li><a href="#"><p>help</p></a></li>
			</ul>
		</div>
	</nav>

	<p class="notice"><%= notice %></p>
	<p class="alert"><%= alert %></p>

	<div class="jumbotron">
		<div class="content">
			<h1> Ask Alma </h1>
			<div>
				<h3> Quora for Columbia </h3>
			</div>
		</div>
	</div>


<%= yield %>

</body>

<footer>
	<div class="content">
		<p>Built by ADI's Qumbia Team!</p>
	</div>
</footer>
</html>
